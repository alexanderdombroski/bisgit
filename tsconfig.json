{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}